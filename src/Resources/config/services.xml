<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Crehler\PayNowPayment\Subscriber\CheckoutConfirmSubscriber" >
            <argument id="Crehler\PayNowPayment\Controller\PaymentMethods\RetrieverController" type="service"/>
            <argument id="Shopware\Core\System\SystemConfig\SystemConfigService" type="service"/>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Crehler\PayNowPayment\Subscriber\FooterSubscriber" >
            <argument id="Shopware\Core\System\SystemConfig\SystemConfigService" type="service"/>
            <argument id="Crehler\PayNowPayment\Controller\PaymentMethods\RetrieverController" type="service"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Crehler\PayNowPayment\Subscriber\CustomerSetDefaultBankSubscriber" >
            <argument id="customer.repository" type="service" />
            <argument id="Symfony\Component\HttpFoundation\RequestStack" type="service" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Crehler\PayNowPayment\Controller\PaymentMethods\RetrieverController" public="true">
            <argument id="Shopware\Core\System\SystemConfig\SystemConfigService" type="service"/>
            <argument id="monolog.logger" type="service"/>
            <argument id="PayNow\Client" type="service"/>
        </service>

        <service id="Crehler\PayNowPayment\Controller\OrderNotificationController" public="true">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="order_transaction.repository"/>
            <argument id="monolog.logger" type="service"/>
            <argument id="Shopware\Core\System\SystemConfig\SystemConfigService" type="service"/>
            <argument id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler" type="service"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Crehler\PayNowPayment\Controller\StatusCheckOnFinishTransactionController" public="true">
            <argument type="service" id="order_transaction.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Crehler\PayNowPayment\Controller\PaymentReturnController" public="true">
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="router"/>
            <argument id="Shopware\Storefront\Page\GenericPageLoader" type="service"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Crehler\PayNowPayment\Controller\RefundController" public="true">
            <argument type="service" id="order_transaction.repository"/>
            <argument id="monolog.logger" type="service"/>
            <argument type="service" id="order.repository"/>
            <argument id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler" type="service"/>
            <argument id="paynow_refund_history.repository" type="service"/>
            <argument id="Crehler\PayNowPayment\Controller\PaymentMethods\RetrieverController" type="service"/>
            <argument type="service" id="PayNow\Client"/>
            <argument id="Crehler\PayNowPayment\Service\RefundService" type="service"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Crehler\PayNowPayment\Entity\PaymentTokenDefinition">
            <tag name="shopware.entity.definition" entity="paynow_payment_tokens"/>
        </service>

        <service id="Crehler\PayNowPayment\Entity\PaymentRefundHistoryDefinition">
            <tag name="shopware.entity.definition" entity="paynow_refund_history"/>
        </service>

        <service id="Crehler\PayNowPayment\Service\RefundService">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="order_transaction.repository"/>
            <argument id="paynow_refund_history.repository" type="service"/>
        </service>

        <service id="Crehler\PayNowPayment\Factory\TransactionDtoFactory">
            <argument type="service" id="paynow_payment_tokens.repository"/>
            <argument type="service" id="router"/>
        </service>

        <service id="Crehler\PayNowPayment\Factory\TransactionResponseDtoFactory">
        </service>

        <service id="Crehler\PayNowPayment\Service\PayNowService">
            <argument id="monolog.logger" type="service"/>
            <argument id="PayNow\Client" type="service"/>
            <argument id="Crehler\PayNowPayment\Factory\TransactionDtoFactory" type="service"/>
            <argument id="order_transaction.repository" type="service"/>
            <tag name="shopware.payment.method.async" />
        </service>

        <service id="Crehler\PayNowPayment\PayNowClient\PayNowClientFactory">
        </service>

        <service id="PayNow\Client">
            <factory class="Crehler\PayNowPayment\PayNowClient\PayNowClientFactory" method="createPayNowClient"/>
            <argument id="Shopware\Core\System\SystemConfig\SystemConfigService" type="service"/>
        </service>

        <service id="PayNow\Service\Payment">
            <argument type="service" id="PayNow\Client"/>
        </service>
    </services>
</container>
